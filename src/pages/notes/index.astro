---
import Layout from '../../layouts/Layout.astro';
import NotePreview from '../../components/NotePreview.astro';
import { getCollection } from 'astro:content';

const notes = await getCollection('notes');
const sortedNotes = notes.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

function getExcerpt(content: string) {
  return content.split('\n\n')[0].replace(/^#.*\n/, '').slice(0, 150) + '...';
}
---

<Layout title="Notes | TiBO">
  <main class="notes-grid">
    <h1>Blog</h1>
    <p class="intro">
      A collection of interconnected notes on music, technology, and personal development.
      Click on any note to explore related concepts and ideas.
    </p>
    
    <div class="notes">
      {sortedNotes.map(note => (
        <NotePreview
          title={note.data.title}
          excerpt={getExcerpt(note.body)}
          slug={note.slug}
        />
      ))}
    </div>
  </main>
</Layout>

<style>
  .notes-grid {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem var(--container-padding);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: var(--orange-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .intro {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 600px;
  }

  .notes {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .notes {
      grid-template-columns: 1fr;
    }
  }
</style>