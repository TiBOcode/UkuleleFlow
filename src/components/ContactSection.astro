---
import ContactForm from './ContactForm.astro';
---

<section class="contact-section">
  <div class="container">
    <h2>Get in Touch</h2>
    <p class="subtitle">Have a question or want to collaborate? Send me a message!</p>
    <ContactForm />
  </div>
</section>

<style>
  .contact-section {
 padding: 4rem 0;
}
h2 {
 font-size: 2rem;
 margin-bottom: 0.5rem;
 text-align: center;
 background: var(--orange-gradient);
 -webkit-background-clip: text;
 -webkit-text-fill-color: transparent;
}
.subtitle {
 text-align: center;
 color: var(--text-secondary);
 margin-bottom: 2rem;
}

@media (max-width: 768px) {
 h2 {
   text-align: left;
   padding-left: 1rem;
 }
 .subtitle {
   text-align: left;
   padding-left: 1rem;
 }
}
</style>