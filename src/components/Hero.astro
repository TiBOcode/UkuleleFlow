<section class="hero">
  <div class="container">
    <div class="profile">
      <div class="profile-image">
        <img src="/ProfilUkulele.jpeg" alt="Channel Picture TiBO" />
      </div>
    </div>
    <div class="bio">
      <h2>Unlock Your Musical Freedom</h2>
      <p>
        Ukulele Improvisation Techniques to Explore Music with Feelings
      </p>
      <div class="cta-buttons">
        <a href="#lesson-highlight" class="cta-button primary">
          Start Your Journey
        </a>
        <a href="/notes" class="cta-button secondary">
          Explore the Blog
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 4rem 0;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 2rem;
    align-items: center;
  }

  .profile-image {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    transition: transform 0.3s ease;
    view-transition-name: profile-image;
  }

  .profile-image:hover {
    transform: scale(1.05);
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .bio h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    background: var(--orange-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .bio p {
    font-size: 1rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-button {
    flex: 0 1 auto;
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    font-size: 0.95rem;
    white-space: nowrap;
  }

  .cta-button.primary {
    background: var(--orange-gradient);
    color: white;
  }

  .cta-button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-2px);
  }

  .cta-button.primary:hover {
    box-shadow: 0 4px 12px rgba(255, 87, 51, 0.25);
  }

  .cta-button.secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .profile-image {
      width: 250px;
      height: 250px;
    }

    .bio {
      padding: 1rem;
    }

    .bio p {
      margin-left: auto;
      margin-right: auto;
    }

    .cta-buttons {
      justify-content: center;
      gap: 0.75rem;
    }

    .cta-button {
      padding: 0.6rem 1.25rem;
      font-size: 0.9rem;
      min-width: auto;
    }
  }
</style>