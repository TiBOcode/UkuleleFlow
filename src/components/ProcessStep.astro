---
interface Props {
  title: string;
  description: string;
  emoji: string;
  step: number;
}

const { title, description, emoji, step } = Astro.props;
---

<article class="process-step">
  <div class="step-header">
    <span class="emoji">{emoji}</span>
    <span class="step-number">Step {step}</span>
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
</article>

<style>
  .process-step {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 1rem;
    padding: 2rem;
    transition: transform 0.2s ease;
  }

  .process-step:hover {
    transform: translateY(-4px);
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .emoji {
    font-size: 2rem;
  }

  .step-number {
    font-size: 0.9rem;
    color: var(--text-secondary);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    background: var(--orange-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1rem;
  }
</style>