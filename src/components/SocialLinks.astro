---
const socialLinks = [
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/@TiBO_Uke',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>`
  },
  
  {
    name: 'Patreon',
    url: 'https://www.patreon.com/TiBO_Ukulele',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M15.386.524c-4.764 0-8.64 3.876-8.64 8.64 0 4.75 3.876 8.613 8.64 8.613 4.75 0 8.614-3.864 8.614-8.613C24 4.4 20.136.524 15.386.524M.003 23.537h4.22V.524H.003"/></svg>`
  }
];
---

<div class="social-links">
  {socialLinks.map(link => (
    <a href={link.url} class="social-link" title={link.name} target="_blank" rel="noopener noreferrer">
      <Fragment set:html={link.icon} />
      <span class="sr-only">{link.name}</span>
    </a>
    <div class="channel-container">
  <script src="https://apis.google.com/js/platform.js"></script>
  <div class="g-ytsubscribe" data-channelid="YOUR_CHANNEL_ID" data-layout="full" data-count="default"></div>
</div>
  ))}
</div>

<style>
  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .social-link {
    color: var(--text-secondary);
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .social-link:hover {
    color: var(--text-primary);
    transform: translateY(-2px);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>