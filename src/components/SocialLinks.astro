<style>
  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .social-link {
    color: var(--text-secondary);
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .social-link:hover {
    color: var(--text-primary);
    transform: translateY(-2px);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
