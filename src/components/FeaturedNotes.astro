---
import { getCollection } from 'astro:content';

const allNotes = await getCollection('notes');
const featuredNotes = allNotes
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

function getExcerpt(content: string) {
  return content.split('\n\n')[0].replace(/^#.*\n/, '').slice(0, 120) + '...';
}
---

<section class="featured-notes">
  <div class="container">
    <h2>Latest Notes</h2>
    <p class="subtitle">Explore my interconnected thoughts on music, flow, and creativity</p>
    
    <div class="notes-grid">
      {featuredNotes.map(note => (
        <a href={`/notes/${note.slug}`} class="note-card">
          <article>
            <h3>{note.data.title}</h3>
            <p>{getExcerpt(note.body)}</p>
            <div class="tags">
              {note.data.tags.map(tag => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          </article>
        </a>
      ))}
    </div>
    
    <div class="explore-more">
      <a href="/notes" class="explore-link">
        Explore all notes
        <span class="arrow">â†’</span>
      </a>
    </div>
  </div>
</section>

<style>
  .featured-notes {
    padding: 4rem 0;
    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.3));
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    background: var(--orange-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .note-card {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 0.5rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .note-card:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.05);
  }

  .note-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .note-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    color: var(--text-secondary);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
  }

  .explore-more {
    text-align: center;
    margin-top: 2rem;
  }

  .explore-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .explore-link:hover {
    color: #FF5733;
  }

  .arrow {
    transition: transform 0.2s ease;
  }

  .explore-link:hover .arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .notes-grid {
      grid-template-columns: 1fr;
    }
  }
</style>